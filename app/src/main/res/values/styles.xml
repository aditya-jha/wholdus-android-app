<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.Activity" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.DefaultCard" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_vertical</item>
    </style>

    <style name="AppTheme.TitleText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@string/font_family_black</item>
        <item name="android:padding">@dimen/title_text_padding</item>
    </style>

    <style name="AppTheme.NormalText" parent="AppTheme">
        <item name="android:paddingLeft">@dimen/title_text_padding</item>
        <item name="android:paddingBottom">@dimen/title_text_padding</item>
    </style>

    <style name="AppTheme.BoldText" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/title_text_padding</item>
        <item name="android:paddingBottom">@dimen/title_text_padding</item>
    </style>

    <style name="AppTheme.BoldTextMedium" parent="AppTheme.BoldText">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">@dimen/secondary_text_padding_top</item>
    </style>

    <style name="AppTheme.ListItem" parent="AppTheme">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.BottomBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">android:layout_width=""
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_dark</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppTheme.BorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.HomeBottomButton" parent="AppTheme.BorderlessButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="AppTheme.ColoredButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.SecondaryText" parent="AppTheme">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/secondary_text_padding_top</item>
        <item name="android:paddingBottom">@dimen/secondary_text_padding_top</item>
    </style>

    <style name="AppTheme.ImportantText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
