<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/card_margin_horizontal"
        android:paddingRight="@dimen/card_margin_horizontal"
        android:paddingTop="@dimen/card_margin_vertical"
        android:paddingBottom="@dimen/card_margin_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/card_margin_horizontal"
        android:paddingBottom="@dimen/text_divider_gap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:text="@string/order_card_order_number"
            android:fontFamily="@string/font_family_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_id_text_view"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            android:fontFamily="@string/font_family_medium"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginBottom="@dimen/card_margin_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/card_margin_horizontal"
        android:paddingRight="@dimen/card_margin_horizontal"
        android:paddingBottom="@dimen/text_divider_gap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_card_date"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:fontFamily="@string/font_family_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_date_text_view"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:fontFamily="@string/font_family_regular"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_card_amount"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:fontFamily="@string/font_family_regular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_amount_text_view"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:fontFamily="@string/font_family_regular"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    </LinearLayout>

</android.support.v7.widget.CardView>