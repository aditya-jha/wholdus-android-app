<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/card_margin_vertical"
        android:paddingLeft="@dimen/card_margin_horizontal"
        android:paddingRight="@dimen/card_margin_horizontal"
        android:paddingTop="@dimen/card_margin_vertical">

        <ImageView
            android:layout_marginRight="@dimen/card_margin_horizontal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications_black_24dp"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_medium"
                tools:text="Welcome to Wholdus"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/notification_body_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                tools:text="Get 5% cashback on your first order"
                android:textColor="@color/primary_text"
                android:layout_marginBottom="5dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notification_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                tools:text="20/01/2017"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>