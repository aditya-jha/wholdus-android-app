<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/card_padding_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@string/font_normal"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_compare_arrows_black_24dp"
                android:drawableRight="@drawable/ic_compare_arrows_black_24dp"
                android:text="@string/replacement_policy_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/text_divider_gap"
                android:layout_marginTop="@dimen/text_divider_gap"
                android:background="@color/divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replacement_policy_text" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</merge>