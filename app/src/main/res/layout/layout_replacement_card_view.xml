<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.DefaultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/AppTheme.DefaultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.ImportantText"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_compare_arrows_black_24dp"
                android:drawableRight="@drawable/ic_compare_arrows_black_24dp"
                android:text="@string/replacement_policy_title" />

            <TextView
                android:paddingBottom="@dimen/card_margin_horizontal"
                android:paddingTop="@dimen/card_margin_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replacement_policy_text" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</merge>