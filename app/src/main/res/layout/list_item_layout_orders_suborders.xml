<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/text_divider_gap"
    android:paddingTop="@dimen/text_divider_gap">

    <TextView
        android:id="@+id/suborder_seller_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/nonselected_dot_6dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:drawableStart="@drawable/nonselected_dot_6dp"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        tools:text="Hitansh Online" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/suborder_pieces_text_view"
        android:layout_toStartOf="@+id/suborder_pieces_text_view"
        android:text="@string/order_card_suborder_pieces"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/suborder_pieces_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@string/font_normal"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="@string/accept" />
</RelativeLayout>