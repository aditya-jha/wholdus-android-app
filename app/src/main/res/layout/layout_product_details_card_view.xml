<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.DefaultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                style="@style/AppTheme.BoldTextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Product Name" />

            <View
                style="@style/AppTheme.DefaultCard"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_price"
                    style="@style/AppTheme.BoldTextMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@android:color/holo_green_dark"
                    tools:text="Rs. 220/pcs" />

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/secondary_text_padding_top"
                    android:text="@string/mrp_key" />

                <TextView
                    android:id="@+id/product_mrp"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lot_size_key" />

                <TextView
                    android:id="@+id/lot_size"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/lot_description_key" />

                <TextView
                    android:id="@+id/lot_description"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/AppTheme.DefaultCard"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/fabric_key" />

                <TextView
                    android:id="@+id/fabric"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/size_key" />

                <TextView
                    android:id="@+id/sizes"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/fabric_key" />

                <TextView
                    android:id="@+id/colors"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:paddingBottom="@dimen/card_margin_horizontal"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/brand_key" />

                <TextView
                    android:id="@+id/brand"
                    style="@style/AppTheme.ImportantText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</merge>