<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/card_padding_vertical"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/card_padding_vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/font_condensed"
                android:maxLines="2"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                tools:text="Product Name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_margin="@dimen/text_divider_gap"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/price_per_piece"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="18sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/lot_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/lot_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/lot_description_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/lot_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/text_divider_gap"
                android:layout_marginTop="@dimen/text_divider_gap"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/fabric_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/fabric"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/size_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/sizes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/color_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/colors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/card_margin_horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/brand_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>