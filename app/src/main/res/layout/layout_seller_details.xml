<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.DefaultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            style="@style/AppTheme.DefaultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.ImportantText"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_store_mall_directory_black_28dp"
                android:drawableRight="@drawable/ic_store_mall_directory_black_28dp"
                android:text="@string/seller_details_title" />

            <LinearLayout
                android:paddingTop="@dimen/card_margin_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/seller_name_key" />

                <TextView
                    style="@style/AppTheme.ImportantText"
                    android:id="@+id/seller_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/location_key" />

                <TextView
                    style="@style/AppTheme.ImportantText"
                    android:id="@+id/seller_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/AppTheme.SecondaryText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/nonselected_dot_6dp"
                    android:drawableStart="@drawable/nonselected_dot_6dp"
                    android:text="@string/speciality_key" />

                <TextView
                    style="@style/AppTheme.ImportantText"
                    android:id="@+id/seller_speciality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</merge>