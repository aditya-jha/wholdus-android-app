<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_horizontal"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_store_mall_directory_black_28dp"
                android:drawableRight="@drawable/ic_store_mall_directory_black_28dp"
                android:fontFamily="@string/font_normal"
                android:gravity="center_vertical"
                android:text="@string/seller_details_title"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/text_divider_gap"
                android:layout_marginTop="@dimen/text_divider_gap"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/seller_name_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/location_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/seller_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingBottom="@dimen/text_divider_gap"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@string/font_normal"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:text="@string/speciality_key"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/seller_speciality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@string/font_normal"
                    android:paddingTop="@dimen/text_divider_gap"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <Button
                android:id="@+id/more_products_from_seller_button"
                android:layout_marginTop="@dimen/card_margin_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.ColoredButton"
                android:text="@string/more_products_from_seller"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</merge>