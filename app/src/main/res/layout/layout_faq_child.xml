<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/nonselected_dot_6dp"
        android:drawablePadding="@dimen/card_margin_horizontal"
        android:drawableStart="@drawable/nonselected_dot_6dp"
        android:padding="@dimen/card_padding_vertical"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/card_margin_horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/card_padding_vertical"
        android:paddingBottom="@dimen/card_padding_vertical"
        android:paddingRight="@dimen/card_padding_vertical"
        android:textColor="@color/secondary_text" />
</LinearLayout>