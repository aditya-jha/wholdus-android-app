<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_height"
        android:layout_marginStart="@dimen/list_item_height"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/card_padding_vertical"
        android:paddingTop="@dimen/card_padding_vertical"
        tools:drawableLeft="@drawable/ic_person_black_24dp"
        tools:text="@string/app_name" />
</LinearLayout>