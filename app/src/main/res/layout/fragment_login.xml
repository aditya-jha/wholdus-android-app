<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/AppTheme.DefaultCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wholdus_logo" />

        <TextView
            style="@style/AppTheme.ImportantText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/login_fragment_header" />

        <include layout="@layout/layout_mobile_number_input" />

        <include layout="@layout/layout_password_input" />

        <Button
            android:id="@+id/login_submit_button"
            style="@style/AppTheme.ColoredButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_fragment_header" />

        <Button
            android:id="@+id/forgot_password_textView"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/forgot_password_fragment_header"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/signup_text"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"
            android:text="@string/no_account"
            android:textAllCaps="false" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/AppTheme.DefaultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>