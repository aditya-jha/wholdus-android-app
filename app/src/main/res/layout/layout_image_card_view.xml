<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_horizontal"
        android:layout_marginTop="@dimen/card_margin_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/display_image"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:paddingTop="@dimen/card_padding_vertical" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/thumb_images_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="@dimen/card_padding_vertical" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</merge>